# 构建用此作业的镜像
cd $OS && IMAGE=$(docker build . | tail -1 | awk '{ print $NF }')

# 构建挂载Docker目录
MNT="$WORKSPACE/.."

# 在Docker里面执行编译测试
CONTAINER=$(docker run -d -v "$MNT:/opt/project" $IMAGE /bin/bash -c "cd /opt/project/$OS && rake spec")

# 进入容器。可以看到输出的内容
docker attach $CONTAINER

# 等待程序退出，得到返回码
RC=$(docker wait $CONTAINER)

# 删除刚刚用到的容器
docker rm $CONTAINER

# 使用刚刚的返回码，退出脚本
exit $RC
